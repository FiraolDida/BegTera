<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353331"
    tools:context=".Activity.ProfileSettingActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/profile_setup"
        android:textColor="#D3771C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="351dp"
        android:layout_marginBottom="684dp"
        android:background="#353331"
        android:drawableBottom="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat"
            android:labelFor="@id/displayName"
            android:text="@string/display_name"
            android:textColor="#D3771C"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/displayName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:background="@drawable/roundborder"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat"
            android:labelFor="@id/age"
            android:text="@string/age"
            android:textColor="#D3771C"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:background="@drawable/roundborder"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/interested_in"
            android:textColor="#D3771C"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:background="@drawable/spinner_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/looking_for_label"
            android:textColor="#D3771C"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/lookingForRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hookupRadioButton"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/hookup"
                android:textColor="#D3771C"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/RelationshipRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/relationship"
                android:textColor="#D3771C"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/friendshipRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/friendship"
                android:textColor="#D3771C"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat"
            android:labelFor="@id/locationSpinner"
            android:text="@string/location_label"
            android:textColor="#D3771C"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:autofillHints=""
            android:background="@drawable/spinner_back"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:inputType="textPersonName"
            android:padding="10dp"
            tools:targetApi="o" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_accent"
            android:fontFamily="@font/montserrat"
            android:text="@string/save"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
